<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sugilte Test"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#4d0000" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Start Recording"
                android:id="@+id/start_recording_button"
                android:onClick="startRecordingOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="End Recording"
                android:id="@+id/end_recording_button"
                android:onClick="endRecordingOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Run Script"
                android:id="@+id/run_script_button"
                android:onClick="runScriptOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Script"
                android:id="@+id/get_script_button"
                android:onClick="getScriptOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Script List"
                android:id="@+id/get_script_list_button"
                android:layout_gravity="center_horizontal"
                android:onClick="getScriptListOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Start Tracking"
                android:id="@+id/button"
                android:layout_gravity="right"
                android:onClick="startTrackingOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="End Tracking"
                android:id="@+id/button2"
                android:layout_gravity="right"
                android:onClick="endTrackingOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Tracking"
                android:id="@+id/button3"
                android:layout_gravity="center_horizontal"
                android:onClick="getTrackingOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Tracking List"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal"
                android:onClick="getTrackingListOnClick" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Clear Tracking List"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                android:onClick="clearTrackingListOnClick" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="No Result"
                android:id="@+id/communication_result"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
